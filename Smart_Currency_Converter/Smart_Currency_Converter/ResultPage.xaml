<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             xmlns:local="clr-namespace:ViewModel.Result"
             x:Class="Smart_Currency_Converter.ResultPage"
             Visual="Material">

    <!-- ⬇ I want to bind the ViewModel code of "ResultPage" with this XAML file ⬇ -->
    <ContentPage.BindingContext>
        <local:ResultPageViewModel></local:ResultPageViewModel>
    </ContentPage.BindingContext>

    <ContentPage.Content>
        <StackLayout>

            <!-- Table Header -->
            <Grid VerticalOptions="StartAndExpand">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="75*"/>
                    <ColumnDefinition Width="25*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                </Grid.RowDefinitions>

                <Label
                    Text="Item"
                    TextColor="Black"
                    FontSize="Large"
                    FontFamily="MontSemiBold"
                    HorizontalTextAlignment="Center"
                    VerticalTextAlignment="Center"
                    Grid.Column="0"
                />

                <Label 
                    Text="Price"
                    TextColor="Black"
                    FontSize="Large"
                    FontFamily="MontSemiBold"
                    HorizontalTextAlignment="Center"
                    VerticalTextAlignment="Center"
                    Grid.Column="1"
                />

                <!-- Separator -->
                <BoxView 
                    HeightRequest="1"
                    BackgroundColor="Black"
                    Grid.ColumnSpan="2"
                    Grid.Row="0"
                    VerticalOptions="End"
                />
            </Grid>

            <!-- Table -->
            <CollectionView
                VerticalScrollBarVisibility="Always"
                BackgroundColor="#DCDCD3"
                ItemsSource="{Binding Productsss}">

                <CollectionView.ItemsLayout>
                    <GridItemsLayout 
                        Orientation="Vertical"
                        VerticalItemSpacing="2"
                    />
                </CollectionView.ItemsLayout>

                <!-- ⬇ This section defines the appearance of each item in Collection View ⬇ -->
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid BackgroundColor="#F8BEBE">

                            <Grid.ColumnDefinitions>
                                <!-- First column -->
                                <ColumnDefinition Width="75*"/>
                                <!-- Second column -->
                                <ColumnDefinition  Width="25*"/>
                            </Grid.ColumnDefinitions>

                            <Label 
                                Text="{Binding ProductName}"
                                Grid.Column="0"
                                BackgroundColor="#C7CFB0"
                                FontSize="20"/>
                            
                            <Label 
                                Text="{Binding RandomName}"
                                VerticalTextAlignment="Center"
                                Grid.Column="1"
                                BackgroundColor="#A8B8B8"/>

                            <!-- Separator -->
                            <BoxView 
                                HeightRequest="1"
                                BackgroundColor="Black"
                                Grid.ColumnSpan="2"
                                Grid.Row="0"
                                VerticalOptions="End"
                            />

                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
                
            </CollectionView>

            <!-- Footer Bar -->
            <Grid BackgroundColor="#CE3C3C" VerticalOptions="EndAndExpand">
                
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                
                <Grid.RowDefinitions>
                    <RowDefinition Height="70" />
                </Grid.RowDefinitions>
                
                <Button
                    Text="View Image"
                    Grid.Row="0"
                    Grid.Column="0" 
                    Margin="10,5,5,10"
                />
                
                <Button
                    Text="Share"
                    Grid.Row="0"
                    Grid.Column="1"
                    Margin="10,5,5,10"
                />

                <Button
                    Text="Save"
                    Grid.Row="0"
                    Grid.Column="2"
                    Margin="10,5,10,10"
                />

            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>