<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:ViewModel.SmartConverter"
             mc:Ignorable="d"
             x:Class="Smart_Currency_Converter.SmartConverterPage">

    <!-- ⬇ I want to bind the ViewModel code of "SmartPage"with this XAML file ⬇ -->
    <ContentPage.BindingContext>
        <local:SmartConverterViewModel></local:SmartConverterViewModel>
    </ContentPage.BindingContext>
    
    <ContentPage.Content>
        <StackLayout>

            <Frame
                HeightRequest="55"
                HasShadow="True"
                CornerRadius="13"
                VerticalOptions="CenterAndExpand"
                BackgroundColor="{StaticResource Mint}" Margin="15,0" Padding="20,6">
                
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer
                        Command="{Binding CardClicked}" 
                        CommandParameter="FrameOne"    
                    />
                </Frame.GestureRecognizers>
                
                <RelativeLayout>
                    <Frame
                        HasShadow="False"
                        CornerRadius="5"
                        Padding="0"
                        Margin="0,3"
                        WidthRequest="75">

                        <Image 
                            Source="{Binding Symbol}" 
                            BindingContext="{Binding FirstCard}"
                            Aspect="AspectFill"
                        />
                    </Frame>

                    <Label
                        x:Name="currencyNameLable1"
                        Text="{Binding Name}"
                        BindingContext="{Binding FirstCard}"
                        FontSize="20"
                        TextColor="Black"
                        RelativeLayout.XConstraint="{ConstraintExpression Type=RelativeToParent, Property=Width, Factor= 0.4, Constant= 0}"  
                        RelativeLayout.YConstraint="{ConstraintExpression Type=RelativeToParent, Property=Height, Factor= 0.04, Constant= 0}"
                    />

                    <Label
                        Text="{Binding Acronym, StringFormat='\({0:N}\)'}"
                        BindingContext="{Binding FirstCard}"
                        FontSize="15"
                        TextColor="Black"
                        RelativeLayout.XConstraint="{ConstraintExpression Type=RelativeToParent, Property=Width, Factor= 0.55, Constant= 0}"  
                        RelativeLayout.YConstraint="{ConstraintExpression Type=RelativeToView, ElementName=currencyNameLable1 ,Property=Height, Factor= 1, Constant= 5}"
                    />
                </RelativeLayout>

            </Frame>

            <Frame
                HeightRequest="55"
                HasShadow="True"
                CornerRadius="13"
                VerticalOptions="CenterAndExpand"
                BackgroundColor="{StaticResource Mint}" Margin="15,0" Padding="20,6">
                
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer
                        Command="{Binding CardClicked}"
                        CommandParameter="FrameTwo"
                    />
                </Frame.GestureRecognizers>
                
                <RelativeLayout>
                    <Frame
                        HasShadow="False"
                        CornerRadius="5"
                        Padding="0"
                        Margin="0,3"
                        WidthRequest="75">

                        <Image
                            Source="{Binding Symbol}" 
                            BindingContext="{Binding SecondCard}"
                            Aspect="AspectFill"
                        />
                    </Frame>

                    <Label
                        x:Name="currencyNameLable2"
                        Text="{Binding Name}"
                        BindingContext="{Binding SecondCard}"
                        FontSize="20"
                        TextColor="Black"
                        RelativeLayout.XConstraint="{ConstraintExpression Type=RelativeToParent, Property=Width, Factor= 0.4, Constant= 0}"  
                        RelativeLayout.YConstraint="{ConstraintExpression Type=RelativeToParent, Property=Height, Factor= 0.04, Constant= 0}"
                    />

                    <Label
                        Text="{Binding Acronym, StringFormat='\({0:N}\)'}"
                        BindingContext="{Binding SecondCard}"
                        FontSize="15"
                        TextColor="Black"
                        RelativeLayout.XConstraint="{ConstraintExpression Type=RelativeToParent, Property=Width, Factor= 0.55, Constant= 0}"  
                        RelativeLayout.YConstraint="{ConstraintExpression Type=RelativeToView, ElementName=currencyNameLable2 ,Property=Height, Factor= 1, Constant= 5}"
                    />
                </RelativeLayout>

            </Frame>

            <Button
                Command="{Binding TakePhoto}"
                Text="Take Photo"
                VerticalOptions="End"
            />
        
        </StackLayout>
    </ContentPage.Content>
</ContentPage>